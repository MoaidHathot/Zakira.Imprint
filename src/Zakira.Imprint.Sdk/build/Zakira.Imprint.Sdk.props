<Project>
  <!--
    Zakira.Imprint.Sdk - Default Properties
    
    These properties define the default destination paths for Imprint content.
    Consumers can override any of these in their .csproj before the targets import.
  -->

  <PropertyGroup>
    <!-- 
      Multi-agent targeting configuration:
      
      ImprintTargetAgents: Explicit list of agents (semicolon-separated: copilot;claude;cursor)
        - Not set (or set to _auto_): auto-detect agents from project directories
        - Set to empty string: explicit opt-out, no content will be created
        - Set to agent list: use exactly those agents
      
      We use a sentinel value "_auto_" to distinguish between:
        - "user didn't set this property" (default to auto-detect)
        - "user explicitly set this to empty" (opt-out)
    -->
    <ImprintTargetAgents Condition="'$(ImprintTargetAgents)' == ''">_auto_</ImprintTargetAgents>

    <!-- Default agents when auto-detection finds nothing (empty = no fallback) -->
    <ImprintDefaultAgents Condition="'$(ImprintDefaultAgents)' == ''"></ImprintDefaultAgents>

    <!-- Legacy: Default destination paths (still used as fallback for single-agent mode) -->
    <ImprintSkillsPath Condition="'$(ImprintSkillsPath)' == ''">$(MSBuildProjectDirectory)\.github\skills\</ImprintSkillsPath>

    <!-- Default destination for prompt files -->
    <ImprintPromptsPath Condition="'$(ImprintPromptsPath)' == ''">$(MSBuildProjectDirectory)\.github\prompts\</ImprintPromptsPath>

    <!-- Default destination for MCP config -->
    <ImprintMcpPath Condition="'$(ImprintMcpPath)' == ''">$(MSBuildProjectDirectory)\.vscode\</ImprintMcpPath>
  </PropertyGroup>

</Project>
